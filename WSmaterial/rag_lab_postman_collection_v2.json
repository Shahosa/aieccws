          "formdata": [
            {
              "key": "files",
              "type": "file",
              "src": ""
            }
          ]
        },
        "url": {
          "raw": "http://<your-api-endpoint>/upload",
          "protocol": "http",
          "host": [
            "<your-api-endpoint>"
          ],
          "path": [
            "upload"
          ]
        }
      }
    },
    {
      "name": "Embed Raw Text",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"content\": \"This is raw text to be embedded into memory.\"\n}"
        },
        "url": {
          "raw": "http://<your-api-endpoint>/embed",
          "protocol": "http",
          "host": [
            "<your-api-endpoint>"
          ],
          "path": [
            "embed"
          ]
        }
      }
    },
    {
      "name": "Ask a Question",
      "request": {
        "method": "POST",
